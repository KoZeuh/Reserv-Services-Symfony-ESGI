{% extends 'base.html.twig' %}

{% block title %}{{company.name}}{% endblock %}

{% block body %}
    {% include 'components/_header.html.twig' with {
        'title': company.name,
        'subtitle': "Bienvenue chez nous !"
    } %}
    
    <section class="py-5">
        <div class="container px-4 px-lg-5">
            <h2 class="text-center mb-3">Nos services</h2>
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {% for service in companyServices %}
                    <div class="col mb-5">
                        <div class="card h-100">
                            {% include 'components/_card_img_company.html.twig' %}

                            <div class="card-body p-4">
                                <div class="text-center">
                                    <h5 class="fw-bolder">{{ service.title }}</h5>
                                    <span class="badge bg-primary">{{ service.price }} € / {{ service.duration }} min</span>
                                </div>
                            </div>

                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="{{ path('booking_new', {'companyServiceId': service.id}) }}">Réserver</a></div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
